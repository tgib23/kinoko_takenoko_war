<h1>Listing chats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.name %></td>
        <td><%= chat.comment %></td>
        <td><%= link_to 'Show', chat %></td>
        <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br>
<div id="chats">
<% @chats.each do |chat| %>
  <%= render 'show', chat: chat %>
<% end %>
</div>

<br>

<%= render 'form' %>

<%= link_to 'New Chat', new_chat_path %>
